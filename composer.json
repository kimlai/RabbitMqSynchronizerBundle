{
    "name": "kimlai/rabbitmq-synchronizer-bundle",
    "description": "easily test your rabbitmq consumers in functional tests",
    "type": "symfony-bundle",
    "license": "MIT",
    "autoload": {
        "psr-0": {
            "Lrqdo\\Bundle\\RabbitMqSynchronizerBundle": "src/"
        }
    },
    "require": {
        "php": ">=5.3.3",
        "symfony/framework-bundle": "~2|~3",
        "oldsound/rabbitmq-bundle": ">=1.5"
    },
    "require-dev": {
        "behat/behat": ">=2.5@stable",
        "behat/symfony2-extension": ">=1.1",
        "behat/mink-extension": ">=1.3",
        "behat/mink-browserkit-driver": ">=1.1",
        "hamcrest/hamcrest-php": ">=1.1.1"
    },
    "config": {
        "bin-dir": "bin/"
    },
    "minimum-stability": "stable"
}
